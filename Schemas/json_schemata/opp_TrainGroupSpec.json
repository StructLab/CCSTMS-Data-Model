{
  "$id": "https://ERJU/opp_TrainGroupSpec",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "description": "Defines the train aspects, which define if the train belongs to the restricted group.",
  "properties": {
    "axleLoadCategories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "AL_A",
          "AL_HS17",
          "AL_B1",
          "AL_B2",
          "AL_C2",
          "AL_C3",
          "AL_C4",
          "AL_D2",
          "AL_D3",
          "AL_D4",
          "AL_D4XL",
          "AL_E4",
          "AL_E5"
        ]
      },
      "description": "Trains with the listed Axle-Load-Category belong to the TrainGroup."
    },
    "cantDeficiencyCategories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "CD_Undefined",
          "CD_80mm",
          "CD_100mm",
          "CD_130mm",
          "CD_150mm",
          "CD_165mm",
          "CD_180mm",
          "CD_210mm",
          "CD_225mm",
          "CD_245mm",
          "CD_275mm",
          "CD_300mm"
        ]
      },
      "description": "Defines the different cant deficiency categories"
    }
  },
  "additionalProperties": false
}